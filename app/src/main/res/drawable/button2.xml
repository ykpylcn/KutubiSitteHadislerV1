<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" >
        <shape>
            <solid
                android:color="@color/secondaryColor" />
            <corners android:bottomRightRadius="24dp" android:bottomLeftRadius="5dp"
                android:topLeftRadius="5dp" android:topRightRadius="5dp" />
            <stroke
                android:width="1px"
                android:color="@color/secondaryDarkColor" />

        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/secondaryDarkColor" />
            <corners android:bottomRightRadius="24dp" android:bottomLeftRadius="5dp"
                android:topLeftRadius="5dp" android:topRightRadius="5dp" />
            <stroke
                android:width="1px"
                android:color="@color/secondaryLightColor" />

        </shape>
    </item>
</selector>