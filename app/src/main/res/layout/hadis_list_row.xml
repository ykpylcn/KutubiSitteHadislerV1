<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.78"
        android:id="@+id/linLayout">

        <TextView
            android:id="@+id/txt_hadis"
            style="@style/TextStyleBasic"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <SeekBar
            android:id="@+id/seekBar"
            android:thumbTint="@color/primaryDarkColor"
            android:progressTint="@color/secondaryDarkColor"
            android:progressBackgroundTint="@color/secondaryDarkColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_weight="0.06"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/text_kaynak"
            style="@style/TextStyleItalikSmall"
            android:text="kaynak" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_hadisno"
            style="@style/TextStyleItalikSmall"
            android:text="hadis no" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_rivayet"
            style="@style/TextStyleItalikSmall"
            android:text="rivayet" />
    </LinearLayout>










</LinearLayout>
