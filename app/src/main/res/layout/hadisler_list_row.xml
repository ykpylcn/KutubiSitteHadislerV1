<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

  >

<androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:elevation="3dp"
        app:cardCornerRadius="5dp"

        >

        <LinearLayout
            android:background="@color/secondaryLightColor2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/img_isfav"
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    app:srcCompat="@drawable/ic_baseline_favorite_border_24" />

                <TextView
                    android:id="@+id/tv_hadisAltKonu"
                    style="@style/TextStyleBasicHeader"
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@+id/img_isfav"
                    />



            </RelativeLayout>

            <TextView
                android:id="@+id/tv_hadis_ravi"
                style="@style/TextStyleKucuk"
                android:visibility="invisible"

                />
            <TextView
                android:id="@+id/tv_hadis"
                style="@style/TextStyleNormal"

                />

            <TextView

                android:id="@+id/tv_kaynak"
                style="@style/TextStyleItalikSmall" />


        </LinearLayout>



    </androidx.cardview.widget.CardView>
</LinearLayout>
