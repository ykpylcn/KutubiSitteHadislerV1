<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.78"

        android:id="@+id/linLayout"
    >

        <TextView
            android:id="@+id/txt_hadis"
            android:textAlignment="center"
            android:layout_height="match_parent"
            android:paddingTop="18dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            style="@style/TextStyleBasic"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <SeekBar
            android:id="@+id/seekBar"
            android:thumbTint="@color/primaryDarkColor"
            android:progressTint="@color/secondaryDarkColor"
            android:progressBackgroundTint="@color/secondaryDarkColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_kaynak"
            style="@style/TextStyleItalikSmall"
            android:text="kaynak"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/txt_hadisno"
            style="@style/TextStyleItalikSmall"
            android:text="hadis no"
            android:textAlignment="center"/>


        <TextView
            android:id="@+id/text_rivayet"
            style="@style/TextStyleItalikSmall"
            android:textAlignment="center"
            android:text="rivayet" />


    </LinearLayout>










</LinearLayout>
