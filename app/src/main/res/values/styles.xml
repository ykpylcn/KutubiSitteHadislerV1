<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
    </style>

    <style name="AppTheme.Genel" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/basliklar_font</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="AppTheme.Genel">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/primaryLightColor</item>
    </style>

    <style name="TextStyleBasic" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_width" >match_parent</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:layout_marginStart" >@dimen/activity_margin</item>
        <item name="android:layout_marginTop" >@dimen/activity_margin</item>
        <item name="android:layout_marginEnd" >@dimen/activity_margin</item>
        <item name="android:textAlignment" >textStart</item>
        <item name="android:fontFamily" >@font/verdana</item>
        <item name="android:textSize" >@dimen/activity_text_size</item>
        <item name="android:textColor" >@color/primaryDarkColor</item>
        timestamp
    </style>
    <style name="TextStyleNote" parent="TextStyleBasic">
        <item name="android:fontFamily" >@font/verdanai</item>
        <item name="android:textSize" >@dimen/timestamp</item>
    </style>
    <style name="TextStyleNormal" parent="TextStyleBasic">

        <item name="android:textSize" >@dimen/activity_text_size</item>
    </style>
    <style name="TextStyleKucuk" parent="TextStyleBasic">

        <item name="android:textSize" >@dimen/activity_text_size_kucuk</item>
    </style>
    <style name="TextStyleBasicHeader" parent="TextStyleBasic">
        <item name="android:fontFamily" >@font/basliklar_font</item>
        <item name="android:textSize" >@dimen/activity_text_size_header</item>
    </style>
    <style name="TextStyleBuyuk" parent="TextStyleBasic">
        <item name="android:fontFamily" >@font/basliklar_font</item>
        <item name="android:textSize" >@dimen/buyuk_text_size</item>
    </style>
    <style name="TextStyleItalikSmall" parent="TextStyleBasic">
        <item name="android:fontFamily" >@font/verdanai</item>
        <item name="android:textSize" >@dimen/activity_text_size_small</item>
        <item name="android:textColor" >@color/primaryDarkColor</item>

    </style>
    <style name="ButtonStyleBasic" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:layout_width" >wrap_content</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:layout_margin" >4dp</item>
        <item name="android:textAlignment" >center</item>
        <item name="android:fontFamily" >@font/verdanab</item>
        <item name="android:textSize" >@dimen/activity_button_size</item>
        <item name="android:textAllCaps" >false</item>

    </style>
    <style name="ButtonStyleBasicLeft" parent="ButtonStyleBasic">
    <item name="android:background" >@drawable/button1</item></style>

    <style name="ButtonStyleBasicRight" parent="ButtonStyleBasic">
        <item name="android:background" >@drawable/button2</item>
    </style>
</resources>